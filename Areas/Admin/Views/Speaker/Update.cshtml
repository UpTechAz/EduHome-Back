@model WebApplication2.Models.Speaker

<div class="col-lg-6">
    <div class="card">
        <div class="card-body">
            <div class="card-title">Update Speaker</div>
            <hr>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="FullName">Full Name</label>
                    <input asp-for="FullName" class="form-control" placeholder="Enter Full Name">
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WorkPlace">Work Place</label>
                    <input asp-for="WorkPlace" class="form-control" placeholder="Enter Work Place">
                    <span class="text-danger" asp-validation-for="WorkPlace"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Profession">Profession</label>
                    <input asp-for="Profession" class="form-control" placeholder="Enter Profession">
                    <span class="text-danger" asp-validation-for="Profession"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photo">Photo</label>
                    <input type="file" asp-for="Photo" class="form-control">
                    <span class="text-danger" asp-validation-for="Photo"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-light px-4">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>
