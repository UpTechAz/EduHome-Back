@model WebApplication2.Models.Slider


<div class="col-lg-6">
    <div class="card">
        <div class="card-body">
            <div class="card-title">Slider</div>
            <hr>
            <form method="post" enctype="multipart/form-data" asp-action="update" asp-controller="Slider" asp-area="admin">
                <input type="hidden" asp-for="FilePath" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter Your Title">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
         
                <div class="form-group">
                    <label asp-for="Description">Commentare</label>
                    <input asp-for="Description" class="form-control" placeholder="Enter Your Commentare">
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div>
                    <img style="width:100px;height:100px" src="~/assets/img/@Model.FilePath" />
                </div>
                <div class="form-group">
                    <label asp-for="Photo">Photo</label>
                    <input asp-for="Photo" class="form-control">
                    <span class="text-danger" asp-validation-for="Photo"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
