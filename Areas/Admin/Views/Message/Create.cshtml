@model WebApplication2.Models.Message

<div class="col-lg-6">
    <div class="card">
        <div class="card-body">
            <div class="card-title">Message</div>
            <hr>
            <form method="post" enctype="multipart/form-data" asp-action="create" asp-controller="Message" asp-area="admin">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Add Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Add Email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MessageInfo">MessageInfo</label>
                    <input asp-for="MessageInfo" class="form-control">
                    <span class="text-danger" asp-validation-for="MessageInfo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Subject">Subject</label>
                    <input asp-for="Subject" class="form-control" placeholder="Add Subject">
                    <span class="text-danger" asp-validation-for="Subject"></span>
                </div>

                <div class="form-group">
                    <button class="btn btn-light px-4">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>