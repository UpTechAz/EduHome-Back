@model WebApplication2.Models.ContactInformation
<div class="col-lg-6">
    <div class="card">
        <div class="card-body">
            <div class="card-title">Add Information</div>
            <hr>
            <form method="post" enctype="multipart/form-data" asp-action="create" asp-controller="ContactInfo" asp-area="admin">
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Skype">Skype</label>
                    <input asp-for="Skype" class="form-control">
                    <span class="text-danger" asp-validation-for="Skype"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Number">Phone Number</label>
                    <input asp-for="Number" class="form-control">
                    <span class="text-danger" asp-validation-for="Number"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-light px-4">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>