@using WebApplication2.Models
@model StaticFile

<div class="col-lg-6">
    <div class="card">
        <div class="card-body">
            <hr>
            <form method="post" enctype="multipart/form-data" asp-action="update" asp-controller="staticfile" asp-area="admin">
                <input type="hidden" asp-for="HeaderLogo" />
                <div class="form-group">
                    <div>
                        <img style="width=100px;height=100px" src="~/assets/img/@Model.HeaderLogo" />
                    </div>
                    <label asp-for="HeaderLogoFile">HeaderLogoFile</label>
                    <input asp-for="HeaderLogoFile" class="form-control">
                    <span class="text-danger" asp-validation-for="HeaderLogoFile"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-light px-4">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
