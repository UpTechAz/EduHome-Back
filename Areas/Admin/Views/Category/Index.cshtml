@using WebApplication2.Models
@model List<Category>

<div class="card">
    <div class="card-body">
        <div class="d-flex; justify-content-lg-between">
            <h5 class="card-title">Categories</h5>
            <a asp-action="create" asp-controller="category" asp-area="admin" class="col-2 d-sm-inline-block btn btn-outline-success"> Add Information</a>

        </div>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Title</th>
                        <th scope="col">CreateAt</th>
                        <th scope="col">ModifiedAt</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.CreatedAt</td>
                            <td>@item.UpdatedAt</td>
                            <th>
                                <a asp-controller="category" asp-action="update" asp-area="admin" asp-route-id="@item.Id" class="btn btn-secondary">Update</a>
                                <form class="d-inline" method="post" asp-controller="category" asp-action="delete" asp-area="admin" asp-route-id="@item.Id">
                                    <button class="btn btn-secondary" type="submit">Delete</button>
                                </form>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>