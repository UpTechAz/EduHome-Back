

@model WebApplication2.Models.StudentQuote

<div class="col-lg-6">
    <div class="card">
        <div class="card-body">
            <div class="card-title">StudentQuote</div>
            <hr>
            <form method="post" enctype="multipart/form-data" asp-action="create" asp-controller="StudentQuote" asp-area="admin">
                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-control" placeholder="Add FullName">
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" placeholder="Add Description">
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>        
                <div class="form-group">
                    <label asp-for="Photo"></label>
                    <input asp-for="Photo" class="form-control">
                    <span class="text-danger" asp-validation-for="Photo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Position"></label>
                    <input asp-for="Position" class="form-control" placeholder="Add Position">
                    <span class="text-danger" asp-validation-for="Position"></span>
                </div>
             
                <div class="form-group">
                    <button class="btn btn-light px-4">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>