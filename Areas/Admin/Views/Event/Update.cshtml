@model WebApplication2.Models.Event

<div class="col-lg-6">
    <div class="card">
        <div class="card-body">
            <div class="card-title">Update Event</div>
            <hr>
            <form method="post" enctype="multipart/form-data" asp-action="Update" asp-controller="Event" asp-area="admin">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Update Title">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" class="form-control" placeholder="Update Description">
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photo">Photo</label>
                    <input type="file" asp-for="Photo" class="form-control">
                    <span class="text-danger" asp-validation-for="Photo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Venue">Venue</label>
                    <input asp-for="Venue" class="form-control" placeholder="Update Venue">
                    <span class="text-danger" asp-validation-for="Venue"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date">Date</label>
                    <input type="date" asp-for="Date" class="form-control">
                    <span class="text-danger" asp-validation-for="Date"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartTime">StartTime</label>
                    <input type="time" asp-for="StartTime" class="form-control">
                    <span class="text-danger" asp-validation-for="StartTime"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndTime">EndTime</label>
                    <input type="time" asp-for="EndTime" class="form-control">
                    <span class="text-danger" asp-validation-for="EndTime"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-light px-4">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>
