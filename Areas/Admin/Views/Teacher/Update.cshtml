@using WebApplication2.Models;
@model Teacher 
<div class="col-lg-6">
    <div class="card">
        <div class="card-body">
            <div class="card-title">Add Customer</div>
            <hr>
            <form method="post" enctype="multipart/form-data" asp-action="update" asp-controller="teacher" asp-area="admin">
               <input type="hidden" asp-for="FilePath"/> <!--submit eleyende shekil null gelir deye, silinmesin deye -->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FullName">Name</label>
                    <input asp-for="FullName" class="form-control" placeholder="Enter Your Name">
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
                <div>
                    <img style="width:100px;height:100px" src="~/assets/img/@Model.FilePath"/>
                </div>
                 <div class="form-group">
                <label asp-for="Photo">Photo</label>
                <input asp-for="Photo" class="form-control">
                <span class="text-danger" asp-validation-for="Photo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ScientificDegree">Degree</label>
                    <input asp-for="ScientificDegree" class="form-control">
                    <span class="text-danger" asp-validation-for="ScientificDegree"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Faculty">Faculty</label>
                    <input asp-for="Faculty" class="form-control">
                    <span class="text-danger" asp-validation-for="Faculty"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Experience">Experience</label>
                    <input asp-for="Experience" class="form-control">
                    <span class="text-danger" asp-validation-for="Experience"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Hobbies">Hobbies</label>
                    <input asp-for="Hobbies" class="form-control">
                    <span class="text-danger" asp-validation-for="Hobbies"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TeacherAbout">About</label>
                    <input asp-for="TeacherAbout" class="form-control">
                    <span class="text-danger" asp-validation-for="TeacherAbout"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TeacherLinks">Teacher Link</label>
                    <input asp-for="TeacherLinks" class="form-control">
                    <span class="text-danger" asp-validation-for="TeacherLinks"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
</div>