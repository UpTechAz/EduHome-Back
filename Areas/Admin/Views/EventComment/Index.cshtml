@using WebApplication2.Models
@model List<EventComment>

<h2>Approved Event Comments</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Message</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comment in Model)
            {
                <tr>
                    <td>@comment.Name</td>
                    <td>@comment.Email</td>
                    <td>@comment.Subject</td>
                    <td>@comment.MessageInfo</td>
                    <td>
                        <form asp-controller="EventComment" asp-action="Approve" method="post">
                            <input type="hidden" name="id" value="@comment.Id" />
                            <button type="submit" class="btn btn-success">Approve</button>
                        </form>
                        <form asp-controller="EventComment" asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@comment.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No approved event comments found.</p>
}
