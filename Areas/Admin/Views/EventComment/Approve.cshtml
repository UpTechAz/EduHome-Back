@model WebApplication2.Models.EventComment

@{
    ViewData["Title"] = "Approve Event Comment";
}

<h1>Approve Event Comment</h1>

<p>Are you sure you want to approve the following comment?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Subject</dt>
        <dd class="col-sm-10">@Model.Subject</dd>
        <dt class="col-sm-2">Message</dt>
        <dd class="col-sm-10">@Model.MessageInfo</dd>
    </dl>
</div>

<form asp-action="Approve" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-primary">Approve</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
