@using WebApplication2.Models
@model List<Blog>
<div class="card">
    <div class="card-body">
        <div class="d-flex; justify-content-lg-between">
            <h5 class="card-title">Blogs</h5>
            <a asp-action="Create" asp-controller="Blog" asp-area="admin" class="col-2 d-sm-inline-block btn btn-outline-success">Add New Blog</a>
        </div>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Photo</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>          
                        <th scope="col">Date</th>
                        <th scope="col">Author</th>
                        <th scope="col">CommentCount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var blog in Model)
                    {
                        <tr>
                            <td><img style="width:100px" src="~/assets/img/@blog.FilePath"></td>
                            <td>@blog.Title</td>
                            <td>@blog.Description</td>
                            <td>@blog.Date.ToShortDateString()</td>                      
                            <td>@blog.Author</td>
                            <td>@blog.BlogComment?.Count()</td>
                            <td>
                                

                                <a asp-controller="Blog" asp-action="update" asp-area="admin" asp-route-id="@blog.Id" class="btn btn-secondary">Update</a>
                                <form class="d-inline" method="post" asp-controller="Blog" asp-action="delete" asp-area="admin" asp-route-id="@blog.Id">
                                    <button class="btn btn-secondary" type="submit">Delete</button>
                                </form>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
