@model WebApplication2.Models.Blog




<div class="col-lg-6">
    <div class="card">
        <div class="card-body">
            <div class="card-title">Blog</div>
            <hr>
            <form method="post" enctype="multipart/form-data" asp-action="Create" asp-controller="Blog" asp-area="admin">

                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Add Title">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" class="form-control" placeholder="Add Description">
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Author"></label>
                    <input asp-for="Author" class="form-control" placeholder="Add Author">
                    <span class="text-danger" asp-validation-for="Author"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date">Date</label>
                    <input asp-for="Date" class="form-control" type="date" placeholder="YYYY-MM-DD">
                    <span class="text-danger" asp-validation-for="Date"></span>
                </div>
     
                <div class="form-group">
                    <label asp-for="Photo">Photo</label>
                    <input asp-for="Photo" class="form-control">
                    <span class="text-danger" asp-validation-for="Photo"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-light px-4">Submit</button>
                </div>
            </form>
        </div>
    </div>
