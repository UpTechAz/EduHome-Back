@model WebApplication2.Models.EventSpeaker

@{
    ViewData["Title"] = "Update";
}

<h2>Update</h2>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="SpeakerId" class="control-label"></label>
        <select asp-for="SpeakerId" class="form-control">
            <option value="">-- Select Speaker --</option>
            @foreach (var speaker in ViewBag.Speakers)
            {
                <option value="@speaker.Id">@speaker.FullName</option>
            }
        </select>
        <span asp-validation-for="SpeakerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EventId" class="control-label"></label>
        <select asp-for="EventId" class="form-control">
            <option value="">-- Select Event --</option>
            @foreach (var evnt in ViewBag.Events)
            {
                <option value="@evnt.Id">@evnt.Title</option>
            }
        </select>
        <span asp-validation-for="EventId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
</form>
