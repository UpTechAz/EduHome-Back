@using WebApplication2.Models;
@model List<Blog>
    <section class="banner">
        <div class="banner-area">
            <div class="banner-area-wrapper">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="banner-content-wrapper">
                                <div class="banner-content">
                                    <h2>Blog</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="blogs-area">
        <div class="container">
            <div id="blogs" class="row">
            @foreach (var item in Model)
            {
                    <div class="col-lg-4 col-md-6">
                        <div class="single-blog">
                            <div class="blog-img">
                                <a asp-action="details" asp-controller="blog" asp-route-id="@item.Id" class="image-a">
                                    <img src="~/assets/images/@item.FilePath" alt="" />
                                    <div class="blog-hover">
                                        <i class="fa-solid fa-link"></i>
                                    </div>
                                </a>
                            </div>
                            <div class="blog-content">
                                <div class="blog-content-top">
                                    <p>@item.Author / @item.Date.ToString("dd MMM yyyy") /
                                        <i class="fa-regular fa-comments"></i> 4 </p>
                                </div>
                                <div class="blog-content-bottom">
                                    <h2><a asp-action="details" asp-controller="blog" asp-route-id="@item.Id">@item.Title</a></h2>
                                    <a asp-action="details" asp-controller="blog" asp-route-id="@item.Id" class="read-more-blog-btn">read more</a>
                                </div>
                            </div>
                        </div>
                    </div>
            }
            </div>
            <div class="d-flex justify-content-center">
            <a id="loadmoreblog" style="background-color:#ec1c23" class="btn btn-primary">Load More...</a></div>
        </div>
    </div>


