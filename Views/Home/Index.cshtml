@using WebApplication2.ViewModels.Home;
@model HomeIndexVM

<section id="slider-container" class="slider-area three">
    <div class="slider-owl owl-theme owl-carousel owl-loaded owl-drag">
        <div class="owl-stage-outer">
            <div class="owl-stage">
                @if(Model.Sliders is not null)
                {
                    @foreach (var slider in Model.Sliders)
                    {
                        <div class="owl-item">
                            <div class="single-slide item"
                                 style="background-image: url(../assets/images/@slider.FilePath)">
                                <div class="slider-content-area">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-lg-7">
                                                <div class="slide-content-wrapper">
                                                    <div class="slide-content">
                                                        @Html.Raw(slider.Title)
                                                        <p>
                                                           @slider.Description
                                                        </p>
                                                        <a class="default-btn" asp-action="Index" asp-controller="About">Learn more</a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-5">
                                                <div class="slider-img">
                                                    <img src="~/assets/images/@slider.BackgroundImage" alt="slider" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>

<section class="courses">
    <div class="pt-150 text-center">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title">
                        <img src="~/assets/images/section.webp" alt="section-title" />
                        <h2>COURSES WE OFFER</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach(var item in Model.Courses)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="single-course">
                            <div class="course-img">
                                <a asp-action="details" asp-controller="course" asp-route-id="@item.Id">
                                    <img src="~/assets/images/@item.FilePath" alt="course" />
                                    <div class="course-hover">
                                        <i class="fa fa-link"></i>
                                    </div>
                                </a>
                            </div>
                            <div class="course-content">
                                <h3><a asp-action="details" asp-controller="course" asp-route-id="@item.Id">@item.CoursName</a></h3>
                                <p>@item.CoursApply</p>
                                <a class="default-btn" asp-action="details" asp-controller="course" asp-route-id="@item.Id">read more</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
@await Component.InvokeAsync("NoticeBoard")
<section class="best_education">
    <div class="pb-135 pt-130 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="about-content">
                        @Html.Raw(Model.EducationTheme.Title).
                        @Html.Raw(Model.EducationTheme.Description)
                        <a class="default-btn" href="/about.html">buy now</a>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="about-img">
                        <img src="~/assets/images/@Model.EducationTheme.FilePath" alt="about" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="events">
    <div class="text-center pt-100 pb-115">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title">
                        <img src="~/assets/images/section.webp" alt="section-title" />
                        <h2>UPCOMMING EVENTS</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach(var item in Model.Events)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="single_event mb-35">
                            <div class="event_img">
                                <a asp-action="details" asp-controller="event" asp-route-id="@item.Id">
                                    <img src="~/assets/images/@item.FilePath" alt="event" />
                                    <div class="course_hover">
                                        <i class="fa fa-link"></i>
                                    </div>
                                </a>
                                <div class="event_date">
                                    <h3>@item.Date.ToString("dd") <span>@item.Date.ToString("MMM")</span></h3>
                                </div>
                            </div>
                            <div class="event_content text-start">
                                <h4><a asp-action="details" asp-controller="event" asp-route-id="@item.Id">@item.Title</a></h4>
                                <ul>
                                    <li><span>time: </span> @item.StartTime.ToString("H:mm tt") - @item.EndTime.ToString("H:mm tt") </li>
                                    <li><span>venue </span>@item.Venue</li>
                                </ul>
                                <div class="event_content_right">
                                    <a class="default-btn" asp-action="details" asp-controller="event" asp-route-id="@item.Id">join now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@await Component.InvokeAsync("StudentQuote")

<section class="blog">
    <div class="pt-150 pb-150 mt-3">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center">
                        <img src="~/assets/images/section.webp" alt="section-title" />
                        <h2>LATEST FROM BLOG</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                @{
                    foreach(var item in Model.Blogs)
                    {
                        <div class="col-lg-4 col-md-6">
                            <div class="single_blog">
                                <div class="blog_img">
                                    <a asp-action="details" asp-controller="blog" asp-route-id="@item.Id">
                                        <img src="~/assets/images/@item.FilePath" alt="blog" />
                                    </a>
                                    <div class="blog_hover">
                                        <a asp-action="details" asp-controller="blog" asp-route-id="@item.Id"><i class="fa fa-link"></i></a>
                                    </div>
                                </div>
                                <div class="blog_content">
                                    <div class="blog_up">
                                        <p>@item.Author/ @item.Date.ToString("MMM dd yyyy")/
                                            <i class="fa-regular fa-comment"></i> 4</p>
                                    </div>
                                    <div class="blog_bottom">
                                        <h2><a asp-action="details" asp-controller="blog" asp-route-id="@item.Id">@item.Title</a></h2>
                                        <a asp-action="details" asp-controller="blog" asp-route-id="@item.Id">read more</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>
