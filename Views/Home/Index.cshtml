@using WebApplication2.ViewModels.Home;
@model HomeIndexVM

<section id="slider-container" class="slider-area three">
    <div class="slider-owl owl-theme owl-carousel owl-loaded owl-drag">
        <div class="owl-stage-outer">
            <div class="owl-stage">
                @if(Model.Sliders is not null)
                {
                    @foreach (var slider in Model.Sliders)
                    {
                        <div class="owl-item">
                            <div class="single-slide item"
                                 style="background-image: url(../assets/images/@slider.FilePath)">
                                <div class="slider-content-area">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-lg-7">
                                                <div class="slide-content-wrapper">
                                                    <div class="slide-content">
                                                        @Html.Raw(slider.Title)
                                                        <p>
                                                           @slider.Description
                                                        </p>
                                                        <a class="default-btn" asp-action="Index" asp-controller="About">Learn more</a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-5">
                                                <div class="slider-img">
                                                    <img src="~/assets/images/@slider.BackgroundImage" alt="slider" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>

<section class="courses">
    <div class="pt-150 text-center">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title">
                        <img src="~/assets/images/section.webp" alt="section-title" />
                        <h2>COURSES WE OFFER</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach(var item in Model.Courses)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="single-course">
                            <div class="course-img">
                                <a asp-action="index" asp-controller="courseDetails">
                                    <img src="~/assets/images/@item.FilePath" alt="course" />
                                    <div class="course-hover">
                                        <i class="fa fa-link"></i>
                                    </div>
                                </a>
                            </div>
                            <div class="course-content">
                                <h3><a asp-action="index" asp-controller="courseDetails">@item.CoursName</a></h3>
                                <p>@item.CoursApply</p>
                                <a class="default-btn" asp-action="index" asp-controller="courseDetails">read more</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

