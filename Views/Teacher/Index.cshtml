@using WebApplication2.ViewModels.Teachers;
@model TeacherVM
<section class="banner">
    <div class="banner-area">
        <div class="banner-area-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="banner-content-wrapper">
                            <div class="banner-content">
                                <h2>Our Teachers</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="teacher">
    <div class="pt-150 pb-105">
        <div class="container">
            <div id="teachers" class="row">
                @foreach(var item in Model.Teachers)
                {
                     <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="single_teacher mb-45">
                        <div class="single_teacher_image">
                            <a href="">
                                <img src="~/assets/images/@item.FilePath" alt="teacher" />
                            </a>
                        </div>
                        <div class="teacher_content">
                            <h2><a asp-action="details" asp-controller="teacher" asp-route-id="@item.Id">@item.FullName</a></h2>
                            <h4>@item.ScientificDegree</h4>
                            <ul>
                                <li>
                                    <a href="https://www.facebook.com/devitems/?ref=bookmarks">
                                        <i class="fa-brands fa-facebook-f"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="https://www.pinterest.com/devitemsllc/">
                                        <i class="fa-brands fa-pinterest-p"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#"><i class="fa-brands fa-vimeo-v"></i></a>
                                </li>
                                <li>
                                    <a href="https://twitter.com/devitemsllc">
                                        <i class="fa-brands fa-twitter"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                }
            </div>
            <div class="d-flex justify-content-center">
                <a id="loadMore" class="btn btn-primary" style="color:aliceblue">Load More...</a>
            </div>
        </div>
    </div>
</section>

