@using WebApplication2.Models
@using WebApplication2.ViewModels.Event;
@model List<Event>
<section class="banner">
    <div class="banner-area">
        <div class="banner-area-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="banner-content-wrapper">
                            <div class="banner-content">
                                <h2>Events</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="events-area">
    <div class="container">
        <div id="events" class="row">
            @foreach(var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-event">
                        <div class="event-img">
                            <a asp-action="details" asp-controller="event" asp-route-id="@item?.Id" class="image-a">
                                <img src="~/assets/images/@item?.FilePath" alt="" />
                                <div class="event-hover">
                                    <i class="fa-solid fa-link"></i>
                                </div>
                            </a>
                            <div class="event-date">
                                <h3>20 <span>jun</span></h3>
                            </div>
                        </div>
                        <div class="event-content">
                            <h4><a asp-action="details" asp-controller="event" asp-route-id="@item?.Id">@item?.Title</a></h4>
                            <ul>
                                <li><span>time:</span> @item?.StartTime - @item?.EndTime PM</li>
                                <li><span>Venue: </span>@item?.Venue</li>
                            </ul>
                            <a asp-action="details" asp-controller="event" asp-route-id="@item?.Id"class="join-now-btn">Join now</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="d-flex justify-content-center">
            <a id="loadmorevent" class="btn btn-primary" style="color:aliceblue">Load More...</a>
        </div>
       
    </div>
</div>