<script type="text/javascript">

    document.querySelector("#course-search").addEventListener("submit", function (e) {
        e.preventDefault();
        const jsonData = { title: document.querySelector("#searchinp").value };
        
        const options = {
            method: 'POST',
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json' 
            },
            body: JSON.stringify(jsonData)
        };

        fetch('Course/FilterByTitle', options)
            .then(response => {
                // Check if the request was successful
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                // Parse the response as JSON
                return response.text();
            })
            .then(data => {
                // Handle the JSON data
                //partial view nu innerhtmle menimsetme
                document.querySelector("#courses").innerHTML = data
            })
            .catch(error => {
                // Handle any errors that occurred during the fetch
                console.error('Fetch error:', error);
            });
    })
    
</script>