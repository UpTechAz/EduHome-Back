@using WebApplication2.ViewModels.Course
@model CourseVM
<section class="banner">
    <div class="banner-area">
        <div class="banner-area-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="banner-content-wrapper">
                            <div class="banner-content">
                                <h2>Course Details</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="courses-details-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="courses-details">
                    <div class="course-detail-img">
                        <img src="~/assets/images/@Model.Course.FilePath" alt="" />
                    </div>
                    <div class="courses-details-content">
                        <h2>@Model.Course.CoursName</h2>
                        <p>@Model.Course.Description</p>
                        <div class="mid-content">
                            <div class="mid-content-left">
                                <div class="single-course-detail-left">
                                    <h3>ABOUT COURSE</h3>
                                    <p>@Model.Course.CoursAbout</p>
                                </div>
                                <div class="single-course-detail-left">
                                    <h3>HOW TO APPLY</h3>
                                    <p>@Model.Course.CoursApply</p>
                                </div>
                                <div class="single-course-detail-left">
                                    <h3>CERTIFICATION</h3>
                                    <p class="p-with-margin">@Model.Course.Certification </p>
                                </div>
                            </div>
                            <div class="mid-content-right">
                                <h3>course fetaures</h3>
                                <ul class="mid-content-ul">
                                    <li>starts <span>@Model.Course.CoursFeature.Starts.ToString("dd MMM, yyyy")</span></li>
                                    <li>duration <span>@Model.Course.CoursFeature.Duration</span></li>
                                    <li>class duration <span>@Model.Course.CoursFeature.ClassDuration</span></li>
                                    <li>skill level <span>@Model.Course.CoursFeature.SkillLevel</span></li>
                                    <li>language <span>@Model.Course.CoursFeature.Language</span></li>
                                    <li>students <span>@Model.Course.CoursFeature.StudentsCount</span></li>
                                    <li>assesments <span>@Model.Course.CoursFeature.Assesments</span></li>
                                </ul>
                                <h3 class="red-h3">COURSE FEE $ @Model.Course.CoursFeature.CourseFee</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="courses-reply-area">
                    <div class="all-replies">
                        <h2>recent reviews</h2>
                        <div class="showing-replies">
                            @* if(Model.Course.CourseComment is not null) *@
                            @{
                                foreach(var item in Model.Course.CourseComment)
                                {
                                    <div class="single-reply">
                                        <h4>@item.Name</h4>
                                        <p>@item.MessageInfo</p>
                                        <div class="reply-button-area">
                                            <button type="button" class="delete">
                                                <i class="fa-solid fa-trash-can"></i>
                                            </button>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
@* 
                        <div class="reply-pagination">
                            <ul class="reply-pagination-ul">
