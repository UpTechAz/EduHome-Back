@using WebApplication2.Models;
@model List<NoticeBoard>
<section class="notice">
    <section class="pt-140 pb-100">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="notice_left mb-25 pb-25">
                        <h3>TAKE A VIDEO TOUR</h3>
                        <div class="notice_video">
                            <div class="video_icon">
                                <a href="" class="video-popup-btn">
                                    <i class="fa-regular fa-circle-play"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="notice_right">
                        <h3>notice board</h3>
                        <div class="notice_down" tabindex="1">
                            @foreach (var item in Model)
                            {
                                <div class="single_notice_right mb-23 pb-20">
                                    <h4>@item.DateTime.ToString("d MMM yyyy")</h4>
                                    <p>@item.Description </p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>