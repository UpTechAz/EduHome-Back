@using WebApplication2.Models;
@model List<Course>
@if(Model != null && Model.Count() > 0)
@foreach (var item in Model)
{
    <div class="col-lg-4 col-md-6">
        <div class="single-course">
            <div class="course-img">
                <a asp-action="details" asp-controller="course" class="image-a">
                    <img src="~/assets/images/@item.FilePath" alt="" />
                    <div class="course-hover">
                        <i class="fa-solid fa-link"></i>
                    </div>
                </a>
            </div>
            <div class="course-content">
                <h3><a asp-action="details" asp-controller="course" asp-route-id="@item.Id">@item.CoursName</a></h3>
                <p>@item.CoursApply </p>
                <a asp-action="details" asp-controller="course" class="read-more-btn">read more</a>
            </div>
        </div>
    </div>
}
